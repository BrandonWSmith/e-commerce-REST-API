<!DOCTYPE html>
<html>
  <head>
    <title>eShopping Dashboard</title>
  </head>
  <body>
    <h1 id="header">eShopping Shop</h1>
    <ul>
      <% productList.forEach(product => { %>
        <li>
          <%= product.name %>
          </br>
          <%= product.price %>
          </br>
          <%= product.description %>
          </br>
          <form action="/users/<%= user.id %>/cart/<%= cart_id %>/products?product_id=<%= product.id %>" method="post">
            <label for="quantity">Quantity:</label>
            <input type="number" id="quantity" name="quantity" min="1" max="1000">
            <button type="submit">Add To Cart</button>
          </form>
        </li>
      <% }); %>
    </ul>
  </body>
</html>